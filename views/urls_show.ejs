<!-- Page that lists the specific URLs stored by a signed in user with the ability to edit it -->
<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>
    <% include ./partials/_header %>

    <p>
            <%for(let element in urls){ %>
                <% if (element === shortURL ) { %>
                    <%= element %> :
                        <%= urls[element] %>
                            <br>
                            <% } %>
                                <% } %>
        </p>
        <form method="POST" action="/urls/<%=shortURL %>/update">
            <input id="longURL" type="text" name="longURL" placeholder="http://" value="<%= urls[shortURL] %>" style="width: 300px">
            <input type="submit" name="update" value="Update" />

        </form>


</body>

</html>